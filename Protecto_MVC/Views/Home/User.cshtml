@model List<Protecto_MVC.Models.User>

@{
    ViewData["Title"] = "Users";
}
<br>
<br>
<br>
<br>
<br>

<h2>Usuarios</h2>

<div class="container" style="width:100%">

    @if (Model != null && Model.Count > 0)
    {
        <table id="Table_Users" class="table table-striped" style="width:100%">
            <colgroup>
                <col style="width:33%">
                <col style="width:33%">
                <col style="width:34%">
            </colgroup>
            <thead>
                <tr>

                    <th class="bg-primary text-white fw-normal">
                        @Html.Label("User Name")
                    </th>
                    <th class="bg-primary text-white fw-normal">
                        @Html.Label("Fisrt Name")
                    </th>
                    <th class="bg-primary text-white fw-normal">
                        @Html.Label("Last Name")
                    </th>
                    <th class="bg-primary text-white fw-normal">
                        @Html.Label("Delete")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.FSName</td>
                        <td>@user.LastName</td>
                        <td>
                            <form method="post" action="DeleteUser">
                                <input type="hidden" name="username" value="@user.UserName" />
                                <button style="padding: 8px 12px; background-color: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer;" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div style="color:red;"> No Data Found</div>
    }
</div>